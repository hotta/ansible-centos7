dn: olcDatabase={1}monitor,cn=config
changetype: modify
replace: olcAccess
olcAccess: {0}to * by dn.base="gidNumber=0+uidNumber=0,cn=peercred,cn=external,cn=auth" read by dn.base="{{ LDAP_BINDDN }}" read by * none

dn: olcDatabase={2}hdb,cn=config
changetype: modify
replace: olcSuffix
olcSuffix: {{ LDAP_BASEDN }}
-
replace: olcRootDN
olcRootDN: {{ LDAP_BINDDN }}
-
add: olcRootPW
olcRootPW: {{ olcBindPass.stdout }}
